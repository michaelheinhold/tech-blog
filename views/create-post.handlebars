<div class="new-post-wrapper">
  <h1 class="new-post new-post-title">Create a Post</h1>
  
  <form action="" class="new-post new-post-form form" autocomplete="off">
    <div class="form-title mb-3">
      <label for="post-title" class="form-label">Title:</label>
      <input type="text" name="post-title" class="form-control">
    </div>
    <div class="form-content mb-3">
      <label for="post-content" class="form-label">Text:</label>
      <textarea type="text" name="post-content" class="form-control" rows="4"></textarea>
    </div>
    <button type="submit" class="submit-btn">Create Post</button>
  </form>
</div>

<script src="/js/create-post.js"></script>