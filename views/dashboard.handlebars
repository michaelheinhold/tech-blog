{{#if posts.length}}
<h1 class="welcome">Here are all your posts, {{firstInArrayUsername posts}}!</h1>

<h2 class="your-posts">Your posts</h2>
<div class="create-new-post">
  <button>
    <a href="/create-post">Create a new post</a>
  </button>
</div>
{{#each posts as |post|}}
{{> post-info post}}
{{/each}}
{{else}}
<h1>You have no posts!</h1>
<div class="create-new-post">
  <button>
    <a href="/create-post">Create a new post</a>
  </button>
</div>
{{/if}}