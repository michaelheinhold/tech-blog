<div class="login-wrapper">
  <h2>Create a new account:</h2>
  <form action="" class="sign-up-form">
    <div>
      <label for="sign-up-username">Username:</label>
      <input type="text" name="sign-up-username" id="sign-up-username" class="form-control">
    </div>
    <div>
      <label for="sign-up-email">Email:</label>
      <input type="text" name="sign-up-email" id="sign-up-email" class="form-control">
    </div>
    <div>
      <label for="sign-up-password">Password:</label>
      <input type="password" name="sign-up-password" id="sign-up-password" class="form-control">
    </div>
    <button type="submit" class="submit-btn">Create Account</button>
  </form>
  Already have an account? 
  <a href="/login">Log in</a>
  instead
</div>

<script src="/js/sign-up.js"></script>